<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %> 
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th><%= link_to "show", book_path(book.id) %></th>
      <th><%= link_to "edit", edit_book_path (@book) %></th>
      <th><%= link_to "destroy", book_path(@book),method: :delete %></th>
      <% end %>
    </tr>
  </tbody>
</table>
<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'create box' %>
  </div>
<% end %>